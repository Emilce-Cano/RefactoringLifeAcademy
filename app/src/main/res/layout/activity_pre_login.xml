<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreLogin">

    <ImageView
        android:id="@+id/trademark"
        android:contentDescription="@string/logotipo_de_la_academia"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:src="@drawable/trademark"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvRefactoringLifeAcademy"/>

    <TextView
        android:id="@+id/tvRefactoringLifeAcademy"
        android:text="@string/refactoring_life_academy"
        android:fontFamily="@font/roboto"
        android:textColor="@color/violet"
        android:textSize="26sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/trademark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:text="@string/iniciar_sesion"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_with_shadow"
        android:elevation="8dp"
        android:layout_width="284dp"
        android:textAllCaps="false"
        android:layout_height="48dp"
        android:layout_marginTop="122dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRefactoringLifeAcademy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnRegister"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:text="@string/register"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_with_shadow"
        android:elevation="8dp"
        android:layout_width="284dp"
        android:textAllCaps="false"
        android:layout_height="48dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvContactSupport"
        android:text="@string/en_caso_de_tener_problemas_comunicarse_con_soporte"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="148dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

